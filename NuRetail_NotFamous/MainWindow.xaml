<Window x:Class="NuRetail_NotFamous.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NuRetail Database Client [Team Not Famous]" Height="350" Width="525">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Click="Refresh_Button_Click_1">Refresh</Button>
        <TabControl SelectionChanged="TabControl_SelectionChanged_1">
            <TabItem Header="Warehouses">
                <DataGrid x:Name="WarehouseDataGrid"></DataGrid>
            </TabItem>
            
            <TabItem Header="Vendors">
                <DataGrid x:Name="VendorsDataGrid"></DataGrid>
            </TabItem>
            
            <TabItem Header="Purchase Order Summary">
                <DataGrid x:Name="PurchaseSumDataGrid" SelectionChanged="PurchaseSumDataGrid_SelectionChanged_1"></DataGrid>
            </TabItem>
            
            <TabItem Header="Purchase Order Details">
                <DockPanel>
                    <DataGrid x:Name="PurchaseDetDataGrid"></DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
