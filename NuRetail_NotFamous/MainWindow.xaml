<Window x:Class="NuRetail_NotFamous.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NuRetail Database Client [Team Not Famous]" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Debug">
                <MenuItem Header="Open Connection" Click="OpenMenuItem_Click_1"></MenuItem>
                <MenuItem Header="Close Connection" Click="CloseMenuItem_Click_2"></MenuItem>
                <MenuItem Header="Query and Populate Warehouses" Click="WarehouseQMenuItem_Click_3"></MenuItem>
                <MenuItem Header="Query and Populate Vendors" Click="VendorQMenuItem_Click_1"></MenuItem>
            </MenuItem>
        </Menu>
        <Button DockPanel.Dock="Bottom" Click="Refresh_Button_Click_1">Refresh</Button>
        <TabControl x:Name="WindowTabControl" SelectionChanged="TabControl_SelectionChanged_1">
            <TabItem Header="Warehouses">
                <DataGrid x:Name="WarehouseDataGrid" IsReadOnly="True"></DataGrid>
            </TabItem>
            
            <TabItem Header="Vendors">
                <DataGrid x:Name="VendorsDataGrid" IsReadOnly="True"></DataGrid>
            </TabItem>
            
            <TabItem Header="Purchase Order Summary">
                <DataGrid x:Name="PurchaseSumDataGrid" SelectionChanged="PurchaseSumDataGrid_SelectionChanged_1" IsReadOnly="True"></DataGrid>
            </TabItem>
            
            <TabItem Header="Purchase Order Details">
                <DockPanel>
                    <DataGrid x:Name="PurchaseDetDataGrid" IsReadOnly="True"></DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
